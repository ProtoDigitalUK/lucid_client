---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Lucid Primitives Playground">
    <h1 class="text-2xl font-bold">
        <a href="/" rel="prefetch:moderate">{"<-"} Home</a>
        - Elements Playground
    </h1>
    <div class="w-full mt-2.5">
        <div
            data-element="exampleStore"

            data-state--boolean="false"
            data-state--number="1"
            data-state--string="hello world"
            data-state--object='{"hello":"world"}'
            data-state--array='["hello","world"]'

            data-bind--data-boolean="boolean"
            data-bind--data-number="number"
            data-bind--data-string="string"
            data-bind--data-object-hello="object.hello"
            data-bind--data-array-hello="array[0]"
            data-bind--data-custom-state-attribute="customState"

            data-handler--on.click="handleClick"
            data-handler--on.scroll="handleScroll"

            class="data-[state--boolean=true]:bg-red-500"
        >
        		<span data-bind--data-boolean="boolean" data-ref="span[]"></span>
        		<span data-bind--data-number="number" data-ref="span[]"></span>
        		<span data-bind--data-string="string" data-ref="span[]"></span>
        		<span data-bind--data-object-hello="object.hello" data-ref="span[]"></span>
        		<span data-bind--data-array-hello="array[0]" data-ref="span[]"></span>
            <button
                data-bind--disabled="boolean"
                data-handler--on.click="handleClick"
                data-handler--dom.text="$boolean ? 'Hide Content' : 'Show Content'"
                data-ref="button"
            >
                Show Content
            </button>
        </div>
    </div>
</Layout>
