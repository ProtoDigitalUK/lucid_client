<div
  data-cookie-details="true"
  class="fixed top-0 left-0 bottom-0 bg-black w-[500px] hidden data-[cookie-details=true]:block data-[cookie-details=false]:hidden"
>
  <div class="overflow-y-auto p-7 text-white divide-y space-y-5 relative">
    <div class="mb-5 pb-5">
      <h2 class="font-bold text-2xl mb-2.5">Cookie Policy</h2>
      <p class="mb-2">
        This website utilises technologies such as cookies to enable essential
        site functionality, as well as for analytics, personalisation, and
        targeted advertising purposes. You may change your settings at any time
        or accept the default settings.
      </p>
      <p>
        For more detailed information about the cookies we use, see our
        <a
          class="text-indigo-500 underline"
          href="https://protodigital.co.uk/cookie-policy">Cookie Policy</a
        >.
      </p>
      <div class="flex gap-2.5 mt-4">
        <button
          data-cookie-action="accept"
          class="p-2 border-white border rounded-md w-1/2 hover:bg-indigo-500 transition-colors duration-200 hover:border-indigo-500"
          >Accept all</button
        >

        <button
          data-cookie-action="reject"
          class="p-2 border-white border rounded-md w-1/2 hover:bg-indigo-500 transition-colors duration-200 hover:border-indigo-500"
          >Reject all</button
        >
      </div>
      <button
        data-cookie-action="dismiss"
        class="absolute top-5 right-5 hover:fill-red-500 fill-white transition-colors duration-200"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          height="16"
          width="12"
          viewBox="0 0 384 512"
          class="h-6 w-6"
          ><path
            d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"
          ></path></svg
        >
        <span class="sr-only">close</span>
      </button>
    </div>

    <a href="https://protodigital.co.uk/cookie-policy"> Cookie Policy</a>
    <ul>
      <li>
        <input id="essential" type="checkbox" data-cookie-config="essential" />
        <label for="essential">Essential</label>
      </li>
      <li>
        <input id="analytics" type="checkbox" data-cookie-config="analytics" />
        <label for="analytics">Analytics</label>
      </li>
      <li>
        <input id="marketing" type="checkbox" data-cookie-config="marketing" />
        <label for="marketing">Marketing</label>
      </li>
    </ul>

    <button data-cookie-action="save" class="p-2 border-white border rounded-md"
      >Save My Preferences</button
    >
  </div>
</div>

<div
  data-cookie-alert
  class="w-96 bg-black rounded-md p-5 text-white fixed bottom-5 left-5 hidden data-[cookie-alert=true]:block data-[cookie-alert=false]:hidden"
>
  <h2 class="text-2xl font-bold">Cookie Policy</h2>
  <button data-cookie-action="dismiss" class="underline absolute top-5 right-5">
    Close
  </button>

  <div class="mt-5 gap-4 flex">
    <button
      data-cookie-action="accept"
      class="p-2 border-white border rounded-md">Accept All</button
    >
    <button
      data-cookie-action="reject"
      class="p-2 border-white border rounded-md">Reject</button
    >
    <button
      data-cookie-action="details"
      class="p-2 border-white border rounded-md">Details</button
    >
  </div>
</div>

<button
  data-cookie-action="details"
  class="flex items-center justify-center fixed bottom-5 right-5 h-14 w-14 rounded-full bg-black"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    height="16"
    width="16"
    viewBox="0 0 512 512"
    class="fill-current text-white h-8 w-8"
    ><path
      d="M257.5 27.6c-.8-5.4-4.9-9.8-10.3-10.6v0c-22.1-3.1-44.6 .9-64.4 11.4l-74 39.5C89.1 78.4 73.2 94.9 63.4 115L26.7 190.6c-9.8 20.1-13 42.9-9.1 64.9l14.5 82.8c3.9 22.1 14.6 42.3 30.7 57.9l60.3 58.4c16.1 15.6 36.6 25.6 58.7 28.7l83 11.7c22.1 3.1 44.6-.9 64.4-11.4l74-39.5c19.7-10.5 35.6-27 45.4-47.2l36.7-75.5c9.8-20.1 13-42.9 9.1-64.9v0c-.9-5.3-5.3-9.3-10.6-10.1c-51.5-8.2-92.8-47.1-104.5-97.4c-1.8-7.6-8-13.4-15.7-14.6c-54.6-8.7-97.7-52-106.2-106.8zM208 144a32 32 0 1 1 0 64 32 32 0 1 1 0-64zM144 336a32 32 0 1 1 64 0 32 32 0 1 1 -64 0zm224-64a32 32 0 1 1 0 64 32 32 0 1 1 0-64z"
    ></path></svg
  >
</button>

<script>
  import CookieController from "@protodigital/cookie-controller";

  new CookieController({
    onConsentChange: (data) => {
      console.log(data);
    },
    versioning: {
      current: "1.0.1",
      onNewVersion: (oldVersion, newVersion) => {
        console.log(oldVersion, newVersion);
      },
    },
  });
</script>
